# .asoundrc for "amon"'s home directory.  

# CLAC - Cirrus Logic Audio Card.
# the plug below needs this:
pcm.clachw {
    type hw
    card sndrpiwsp
    device 0
}

# The "plug" type does #channel and samplerate conversion on demand.
pcm.clac {
       type plug
        slave.pcm "clachw"

        # http://www.alsa-project.org/alsa-doc/alsa-lib/pcm_plugins.html
        route_policy copy
}

#######################################################
# Support for the USB dongle: Sound Blaster Play 2

pcm.soundblasterplayhw {
    type hw
    card S2
    device 0
}

# The "plug" type does #channel and samplerate conversion on demand.
pcm.soundblasterplay {
        type plug
        slave.pcm "soundblasterplayhw"

        # http://www.alsa-project.org/alsa-doc/alsa-lib/pcm_plugins.html
        route_policy copy
}

############################################################
# Support for: Creative Technology Ltd Sound Blaster Play! 3
pcm.sbplay3hw {
      type hw
      card S3
      device 0
}
pcm.sbplay3plug {
      type plug
      slave.pcm "sbplay3hw"
      route_policy copy
}
